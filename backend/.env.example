# Backend Environment Variables - Copy this file to .env and update values

# Frontend URL - Update this to your deployed frontend URL after deployment
# For local development: http://localhost:5173
# For production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:5173

# MongoDB Connection - Update with your MongoDB connection string for production
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret - Change this to a secure random string in production
JWT_SECRET=your_jwt_secret_here

# Server Port
PORT=5000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_KEY_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_CALLBACK_URL=http://localhost:5000/api/twitter/callback